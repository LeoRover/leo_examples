<launch>
    <arg name="file" default="$(find leo_example_line_follower)/cfg/color_mask.yaml"/>
    <arg name="pub_mask" default="false"/>

    <node name="line_follower" pkg="leo_example_line_follower" type="line_follower.py" clear_params="true" output="screen">
        <rosparam command="load" file="$(arg file)"/>
        <param name="pub_mask" value="$(arg pub_mask)"/>
    </node>

</launch>